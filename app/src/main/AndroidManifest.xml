<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poplify.big_potato">


    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:anyDensity="true">
    </supports-screens>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".main_menu.Game_menu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".qwordie.Extra_cards"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            >
        </activity>
        <activity android:name=".qwordie.How_to_play_1"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:noHistory="true">
        </activity>
        <activity android:name=".qwordie.How_to_play_2"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:noHistory="true">
        </activity>
        <activity android:name=".qwordie.How_to_play_3"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:noHistory="true">
        </activity>
        <activity android:name=".qwordie.How_to_play_4"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:noHistory="true">
        </activity>

        <activity
            android:name=".rainbow_rage.How_to_play_rainbow_1"
            android:label="@string/title_activity_how_to_play_rainbow_1"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".rainbow_rage.RainbowRage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".main_menu.all_games"
            android:label="@string/title_activity_all_games"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".qwordie.Qwordie_activity"
            android:label="@string/title_activity_games__list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>


</manifest>
