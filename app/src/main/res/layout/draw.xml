<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@mipmap/scrawl_how_back"
        android:id="@+id/main_back"
        >




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView23_face"
            android:visibility="visible"
            android:layout_marginBottom="35dp"
            android:src="@mipmap/scrawl_draw_black"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@mipmap/scrawl_stopwatch_setting"
            android:layout_height="wrap_content"
            android:id="@+id/set_layout"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:text="How many players?"

                    android:id="@+id/textView9" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="left"
                android:weightSum="3"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:paddingBottom="5dp"
                        android:textSize="25dp"
                        android:checked="true"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton4" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:paddingBottom="5dp"
                        android:textSize="25dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton5" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:paddingBottom="5dp"
                        android:textSize="25dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:weightSum="3"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:paddingBottom="5dp"
                        android:checked="false"
                        android:textSize="25dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton7" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:paddingBottom="5dp"
                        android:textSize="25dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton8" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp"

                android:layout_height="40dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Draw"

                        android:id="@+id/textView7" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Describe"


                        android:id="@+id/textView8" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"

                android:weightSum="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_marginLeft="4dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="60 seconds "
                        android:paddingBottom="5dp"
                        android:checked="true"
                        android:textSize="20dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton60" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 seconds "
                        android:paddingBottom="5dp"
                        android:textSize="20dp"
                        android:checked="true"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButtonds30" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="90 seconds"
                        android:paddingBottom="5dp"
                        android:textSize="20dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton90" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 seconds"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="4dp"
                        android:textSize="20dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButtonds45" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="120 seconds"
                        android:textSize="20dp"
                        android:paddingBottom="5dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButton120" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight=".5"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 seconds"
                        android:textSize="20dp"
                        android:layout_marginRight="6dp"
                        android:paddingBottom="5dp"
                        android:button="@drawable/checkbox"
                        android:id="@+id/radioButtonds60" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textSize="25dp"
                    android:background="@mipmap/main_menu_back"
                    android:textAllCaps="false"
                    android:id="@+id/button3" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="70dp"

            android:gravity="center"
            android:id="@+id/back_lay"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/black_cross"
                android:id="@+id/imageView27" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:id="@+id/bottom_layer"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:visibility="visible"
                android:background="@mipmap/main_menu_back"
                android:id="@+id/button4_start"
                 />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/button5dgfdgdfg_ppreset"
                android:visibility="invisible"

                android:background="@mipmap/main_menu_back"
                 />



        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView28"
            android:visibility="visible"
            android:src="@mipmap/scrawl_stopwatch_back_30"

             />

    </RelativeLayout>

</LinearLayout>