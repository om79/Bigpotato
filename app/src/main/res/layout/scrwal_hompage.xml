<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/scrawl_how_back"
    android:id="@+id/main_layout"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight=".1"
                    android:weightSum="1"
                    android:gravity="right|center"
                    android:layout_height="50dp">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/black_back"
                        android:background="@null"
                        android:visibility="visible"
                        android:layout_weight=".1"
                        android:id="@+id/back_scrawl" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"></LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:text="#Scrawl"
                        android:textColor="@color/black"
                        android:id="@+id/hashtag5"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    
                    android:layout_height="match_parent">



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/scrawl_main_pic"
                        android:gravity="center"

                        android:scaleType="fitXY"
                        android:id="@+id/imageView3" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight=".35"

            android:gravity="top"
            android:layout_height="0dp">


            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/How"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:id="@+id/how_to_play_scrawl" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Scrawl stopwatch"

                android:layout_marginBottom="20dp"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:id="@+id/exta_cards_scrawl" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rule randomiser"

                android:layout_marginBottom="20dp"
                android:onClick="onClick"
                android:textColor="@color/black"
                android:id="@+id/exta_stopwatch_scrawl" />



            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Buy"

                android:textColor="@color/black"

                android:id="@+id/buy_the_game_scrawl" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewf9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@mipmap/scrawl_sticker"
        android:visibility="gone"
        />
    </LinearLayout>
</RelativeLayout>
