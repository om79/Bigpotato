<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/card_view_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_main_back"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"
            android:id="@+id/info_text_menu" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/gif_back"

            android:layout_height="200dp">

            <com.example.poplify.big_potato.main_menu.GifView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gifview"
                android:src="@raw/bod_anim" />


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:id="@+id/imageView7cross"
            android:src="@mipmap/cross"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/child_layout"
            android:gravity="center"
            android:layout_below="@+id/gif_back"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"

            android:layout_alignEnd="@+id/imageView7cross">

            <ImageView
                android:id="@+id/lblListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@mipmap/bod_head"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ghjghj"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/textView10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/light_grey"
                android:id="@+id/viewStub" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dgfdgdfgfdg"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:id="@+id/textView11_tag" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/viewStub2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="15dp"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyle"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:text="Let's go!"
                    android:textSize="25dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"

                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@mipmap/main_menu_back"
                    android:id="@+id/button2" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>
    </LinearLayout>


