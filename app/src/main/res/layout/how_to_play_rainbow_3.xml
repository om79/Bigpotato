<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    android:animateLayoutChanges="true"
    android:background="@mipmap/background">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/main_menu"
        android:background="@drawable/back_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:onClick="how_to_play_screens"
        android:layout_alignParentLeft="true"
        android:scaleType="fitStart"
        android:gravity="left"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Grab the wrong stock and lose a block. But watch out! Hidden amongst the cards are real rainbow cards, where no colours have swapped places."
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/perfect_card"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginRight="45dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_marginLeft="35dp">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='See one, shout "Rainbow!" and take a block of your choice. Shout "Rainbow!" incorrectly and lose ALL your chips.'
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_play"
            android:onClick="how_to_play_screens"
            android:background="@drawable/ic_arrow_back_white_24dp_2x"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginEnd="52dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_play"
            android:onClick="how_to_play_screens"
            android:background="@drawable/ic_arrow_forward_white_24dp_2x"
            android:layout_centerVertical="true"
            android:layout_marginStart="54dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"/>
    </RelativeLayout>
</RelativeLayout>

