<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgcross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:adjustViewBounds="true"
        android:src="@mipmap/ques_card"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgcross"
        android:layout_alignLeft="@+id/imgcross"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:layout_alignStart="@+id/imgcross">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:textSize="10dp"
            android:text=""
            android:maxLines="6"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:id="@+id/textView_question"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:layout_alignTop="@+id/imgcross"
            android:layout_alignRight="@+id/imgcross"
            android:layout_alignEnd="@+id/imgcross" />
    </LinearLayout>


</RelativeLayout>