<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/main_menu"
        android:background="@drawable/back_arrow"
        android:textColor="#ffffff"
        android:onClick="how_to_play_screens"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:gravity="left"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="40dp"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Place the seven coloured stacks on the table in correct rainbow order: red, orange, yellow, green, blue, indigo, violet."
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/stacks"
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/textView"
                android:layout_margin="10dp"

                android:layout_marginRight="15dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:paddingLeft="5dp"
                android:id="@+id/relativeLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='Now choose Easy or Hard Rainbow Cards.'
                    android:id="@+id/textView3"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:layout_alignParentTop="true"
                    />

            </RelativeLayout>

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".1"
            android:weightSum="1"
            android:layout_height="70dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_gravity="right"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/left_arrow"
                    android:visibility="invisible"
                    android:id="@+id/privious_3" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1/5"
                android:gravity="right|center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:layout_weight=".1"
                android:id="@+id/textView4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:visibility="visible"
                android:padding="4dp"
                android:onClick="how_to_play_screens"
                android:src="@mipmap/next_arrow"
                android:id="@+id/first_play" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

