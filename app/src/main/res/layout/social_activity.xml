<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/social_layout"
    android:visibility="visible"
    android:background="@mipmap/social_back"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/zxcv"
        android:gravity="center|left"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/social_cross"
            android:gravity="center|left">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@mipmap/cross"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/social_tag"
            android:layout_marginRight="25dp"
            android:gravity="center|right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/title_tag"
                android:textSize="20dp"
                android:text="\@BigPotatoGames"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zxcv"
        android:id="@+id/xppp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/social_logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/xppp"
        android:id="@+id/txxt">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/socail_txt"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txxt"
        android:id="@+id/ypp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/social_fb"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/instagram"
            ></RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@mipmap/social_twitter"
            android:id="@+id/twitter"
            ></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/ypp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/snapchat"
            android:background="@mipmap/social_insta"

            android:layout_below="@+id/instagram"
            android:layout_alignStart="@+id/instagram"></RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/mail"
            android:background="@mipmap/social_youtube"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/snapchat"
            android:layout_toEndOf="@+id/snapchat"></RelativeLayout></LinearLayout>



</RelativeLayout>

</LinearLayout>